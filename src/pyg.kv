#:kivy 1.1.0

<Main>:
    Grid:
        id: grid
        Cursor:
            id: cursor
            main: root
            color: (1, 1, 0, 0.7)
            is_active: not drawer.is_visible
            is_visible: True
            cursor_width: grid.cell_width
            cursor_height: grid.cell_height
            position_y: grid.rows - 1
            thickness: 2
        Drawer:
            id: drawer
            main: root
            rows: grid.rows
            cols: grid.cols
            is_visible: False
            pos: (0, grid.size[1] / -2)
            size: (grid.size[0], grid.size[1] / 2)
            col_default_width: grid.cell_width
            row_default_height: grid.cell_height
            canvas:
                Color:
                    rgba: (1, 1, 1, 0.9)
                Rectangle:
                    pos: grid.pos
                    size: (grid.size[0], self.is_visible * grid.size[1] / 2)
            Cursor:
                main: root
                color: (1, 0, 0, 0.7)
                is_active: drawer.is_visible
                is_visible: drawer.is_visible
                cursor_width: grid.cell_width
                cursor_height: grid.cell_height
                position_x: 0
                position_y: grid.rows / 2 - 1
                thickness: 2

<DrawerOption>:
    id: option
    anchor_x: 'center'
    anchor_y: 'center'
    BoxLayout:
        orientation: 'vertical'
        Image:
            source: option.image_source
        Label:
            text: option.name



