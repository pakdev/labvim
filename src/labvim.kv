#:kivy 1.1.0

<Main>:
    Grid:
        id: grid
        Cursor:
            id: cursor
            main: root
            width: grid.cell_width
            height: grid.cell_height
            position_y: grid.rows - 1
            thickness: 2
        Drawer:
            main: root
            rows: grid.rows
            cols: grid.cols
            row_default_height: grid.cell_height
            col_default_width: grid.cell_width
            size: (grid.size[0], grid.size[1] / 2)
            pos: (0, grid.size[1] / -2)
            visible: False
            canvas:
                Color:
                    rgba: (1, 1, 1, 0.7)
                Rectangle:
                    pos: grid.pos
                    size: (grid.size[0], self.visible * grid.size[1] / 2)
            Cursor:
                main: root
                is_active: False
                width: grid.cell_width
                height: grid.cell_height
                position_y: grid.rows / 2
                thickness: 2



